{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "type": "shell",
            "command": "${workspaceFolder}\\scripts\\make.ps1",
            "args": [
                "build"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "isBackground": false,
            "presentation": {
                "echo": true,
                "reveal": "always",
                "revealProblems": "onProblem",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Build and Upload",
            "type": "shell",
            "command": "${workspaceFolder}\\scripts\\make.ps1",
            "args": [
                "build",
                "--upload"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "isBackground": false,
            "presentation": {
                "echo": true,
                "reveal": "always",
                "revealProblems": "onProblem",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Clean Build",
            "type": "shell",
            "command": "${workspaceFolder}\\scripts\\make.ps1",
            "args": [
                "build",
                "--clean"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "isBackground": false,
            "presentation": {
                "echo": true,
                "reveal": "always",
                "revealProblems": "onProblem",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Build with All Warnings",
            "type": "shell",
            "command": "${workspaceFolder}\\scripts\\make.ps1",
            "args": [
                "build",
                "-AllWarnings"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "isBackground": false,
            "presentation": {
                "echo": true,
                "reveal": "always",
                "revealProblems": "onProblem",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Upload",
            "type": "shell",
            "command": "${workspaceFolder}\\scripts\\make.ps1",
            "args": [
                "upload"
            ],
            "group": "none",
            "isBackground": false,
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true
            },
            "problemMatcher": []
        },
        {
            "label": "Monitor",
            "type": "shell",
            "command": "${workspaceFolder}\\scripts\\make.ps1",
            "args": [
                "monitor"
            ],
            "group": "none",
            "isBackground": false,
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true
            },
            "problemMatcher": []
        }
    ]
}